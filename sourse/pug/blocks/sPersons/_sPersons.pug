mixin firmCard(name, city, company, i)
	+b.firm-card
		+img(`img/svg/line.svg`).line
		.row
			+e.content.col-12.col-lg-8
				h3= name
				//- +img(`img/svg/${name}.svg`).name
				+e.city
					+icon('location')
					| #{city}
				+e.company!= company
			+e.content.col-12.col-lg-4
				+e.img-wrap: +img(`img/sPersons-firm-${i}.png`)