mixin sPersons(data)
	// start sPersons
	+b.SECTION.sPersons.section#sPersons&attributes(attributes)
		.container
			+img(`img/svg/star-white.svg`).star
			+b.section-title.text-center
				h2 Знакомься, наши<br>предприниматели
			+e.slider--js
				+arrow
				.swiper-wrapper
					+e.slide.swiper-slide
						+card('Вадим Кульков', 'Краснодарский край', 'Компания «БРОНИРУЙ»')
					+e.slide.swiper-slide
						+card('Вадим Кульков', 'Краснодарский край', 'Компания «БРОНИРУЙ»')
					+e.slide.swiper-slide
						+card('Вадим Кульков', 'Красноярский край', 'Компания «БРОНИРУЙ»')
					+e.slide.swiper-slide
						+card('Вадим Кульков', 'Краснодарский край', 'Компания «БРОНИРУЙ»')
					+e.slide.swiper-slide
						+card('Валерия Котова', 'Вологодская область', 'Салон мебели VALERIE')
					+e.slide.swiper-slide
						+card('Дмитрий Моисеенко', 'Красноярский край', 'Промтехэкология')
				.swiper-pagination
	// end sPersons


mixin card(name, city, company)
	+b.person-card
		+e.img-wrap.text-center: +img('img/sPersons-img-1.png')
		+e.content
			+e.name!= name
			+e.city
				+icon('location')
				| #{city}
			+e.company!= company

